<h2>Страны</h2>
<% if @country.empty? %>
  <b>Стран пока нет</b>
<% else %>
  <table class="table table-sm table-hover">
    <tr>
      <th scope="col">Name</th>
      <th></th>
      <th></th>
    </tr>
    <% @country.each do |i| %>
      <tr data-path="<%= country_path(i) %>">
        <td><%= link_to i.name, country_path(i) %></td>
        <td><%= link_to "изменить", edit_country_path(i), class: "btn btn-outline-secondary btn-sm" %></td>
        <td><button type="button" class="btn btn-outline-danger deleteAction btn-sm">Удалить</button></td>
      </tr>
    <% end %>
<% end %>
</table>
<%= link_to "Добавить страну", new_country_path(), class: "btn btn-outline-primary btn-sm" %>
