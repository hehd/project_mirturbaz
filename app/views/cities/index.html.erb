<h2>Города</h2>
<% if @city.empty? %>
  <b>Городов пока нет</b>
<% else %>
  <table>
    <tr>
      <th>id</th>
      <th>Name</th>
      <th></th>
    </tr>
    <% @city.each do |i| %>
      <tr>
        <td><%= i.id %></td>
        <td><%= link_to i.name, city_path(i) %></td>
        <td><%= link_to "изменить", edit_city_path(i) %></td>
        <td><%= link_to "Удалить", city_path(i), method: :delete, data: { confirm: "Точно удалить?"} %></td>
      </tr>
    <% end %>
<% end %>
</table>
<%= link_to "Добавить город", new_city_path() %>