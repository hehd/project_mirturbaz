<h2>Регионы</h2>
<% if @region.empty? %>
  <b>Регионов пока нет</b>
<% else %>
  <table>
    <tr>
      <th>id</th>
      <th>Name</th>
      <th></th>
    </tr>
    <% @region.each do |i| %>
      <tr data-path="<%= region_path(i) %>">
        <td><%= i.id %></td>
        <td><%= link_to i.name, region_path(i) %></td>
        <td><%= link_to "Изменить", edit_region_path(i) %></td>
        <td><span class="deleteAction">Удалить</span></td>
      </tr>
    <% end %>
<% end %>
</table>
<%= link_to "Добавить регион", new_region_path() %>