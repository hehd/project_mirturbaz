<div class="row">
  <div class="col-lg-3">
    <div class="form-group">
      <%= f.label :country_id, "Выберите страну:" %> <br/>
      <%= f.collection_select :country_id, Country.all, :id, :name, class: "form-control" %>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-lg-3">
    <div class="form-group">
      <%= f.label :name, "Название региона:" %>
      <%= f.text_field :name, title: "Допустимы русские и латинские символы, тире, апостроф, пробел", placeholder: " ",
                              class: "form-control", required: true, pattern: "[A-Za-zА-Яа-я' -]+" %>
    </div>
  </div>
</div>

    <%= f.submit "Сохранить", class: "btn btn-outline-success btn-sm" %>
